{
  "name": "personal-expensify-be",
  "version": "1.0.0",
  "description": "A simple BE expense dashboard application",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ts-node -r dotenv/config ./src/app.ts",
    "prepare-test-environment": "npm run stop-containers && npm run up-containers && npm run health-check && npm run initial-setup",
    "initial-setup": "bash ./scripts/initial-db-setup.sh",
    "migrate-script": "bash ./scripts/migrate.sh",
    "stop-containers": "docker compose rm -s -f",
    "up-containers": "docker compose up --detach",
    "health-check": "bash ./scripts/health-check.sh postgres"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mani-arjunan/personal-expensify-be.git"
  },
  "keywords": [
    "node",
    "expensify-node",
    "typescript"
  ],
  "author": "Manikandan Arjunan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mani-arjunan/personal-expensify-be/issues"
  },
  "homepage": "https://github.com/mani-arjunan/personal-expensify-be#readme",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.1",
    "dotenv": "^16.3.1",
    "ts-node": "^10.9.1"
  }
}
